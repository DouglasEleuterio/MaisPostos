<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.ufg.gleibson.postos.Controler.InicioActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal">

        <Button
            android:layout_weight="1"
            android:background="#009688"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/novo_posto"
            android:textColor="@android:color/background_light"
            android:onClick="novoPosto"/>

        <Button
            android:layout_weight="1"
            android:textColor="@android:color/background_light"
            android:background="#009688"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:onClick="login"/>

        <Button
            android:layout_weight="1"
            android:textColor="@android:color/background_light"
            android:background="#009688"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/posto"
            android:onClick="posto"/>

    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.maps.MapFragment"
        tools:layout="@layout/abc_action_mode_bar" />

</LinearLayout>
