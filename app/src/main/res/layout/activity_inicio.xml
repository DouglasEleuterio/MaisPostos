<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#009688"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".Controler.InicioActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo_branca"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
    />

    <TextView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="@string/qual_combustivel_voce_usa"
    />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/gasolina_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gasolina"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="25dp"
            android:padding="16dp"
            android:onClick="
        "/>

        <RadioButton
            android:id="@+id/alcool_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alcool"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="25dp"
            android:padding="16dp"
            android:onClick=""
        />

        <RadioButton
            android:id="@+id/diesel_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diesel"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="25dp"
            android:padding="16dp"
            android:onClick=""
        />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
    />

    <Button
        android:padding="16dp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="@string/comecar"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#009688"
        android:textSize="20dp"
        android:background="@android:color/background_light"
        android:onClick=""
    />

</LinearLayout>